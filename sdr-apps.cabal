    hs-source-dirs:      record
    default-language:    Haskell2010
    ghc-options:         -threaded -O2

executable waterfall
    main-is:             waterfall.hs
    other-modules:       
    -- other-extensions:    
    build-depends:       base >=4.7 && <5, sdr, vector, transformers, errors, pipes, storable-complex, optparse-applicative, OpenGL, dynamic-graph
    hs-source-dirs:      waterfall
    default-language:    Haskell2010
    ghc-options:         -threaded -O2

executable to-udp
    main-is:             to-udp.hs
    other-modules:       
    -- other-extensions:    
